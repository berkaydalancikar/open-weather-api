{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/nest",
      "args": ["start", "--debug", "--watch"],
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "console": "integratedTerminal"
    }
  ]
}